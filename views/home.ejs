<%- include("./parcials/header") -%>

<h1>Home</h1>
<div class="form-group">
  <p><%= homeStartingContent %></p>
</div>

<div class="box">
  <!-- looping over all posts -->
  <% posts.forEach(element => { %>
  <h2><%= element.postTitle %></h2>
  <p><%= element.postText.substring(0, 100) + " ..." %> <a href="/posts/<%= element.postTitle %>"> Read more </a> </p>
  <!-- <button onclick="toggleText()" id="textButton"> 
    Read more 
</button>  -->
  <% }) %>
</div>

